generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String @id @default(cuid())
  username          String
  platformId        String  
  platform          Platform @relation(fields: [platformId], references: [id])
  password          String
  name              String
  purchasedCourses  Course[]  @relation
  purchases         Purchases[]
  @@unique([username,platformId])
}

//e.g 100xDev
model Platform {
  id                String @id @default(cuid())
  username          String @unique
  password          String
  name              String @unique
  students          User[]
  createdCourses    Course[]
}

model Course {
  id                String @id @unique @default(cuid())
  name              String
  price             Int
  imageUrl          String  
  creatorId         String
  platform          Platform @relation(fields: [creatorId], references: [id])
  students          User[] @relation
  purchased         Purchases[]
  @@unique([name,creatorId])
}

model Purchases {
  id                String @id @unique @default(cuid())
  amount            Int
  buyerId           String
  buyer             User @relation(fields: [buyerId], references: [id])
  courseId          String
  course            Course @relation(fields: [courseId], references: [id])
  purchaseDate      DateTime @default(now())
}

enum Role {
  Teacher
  Student
}